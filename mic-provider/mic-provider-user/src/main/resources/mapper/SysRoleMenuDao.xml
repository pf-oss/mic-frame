<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mic.dao.SysRoleMenuDao">

    <resultMap type="com.mic.model.bean.SysRoleMenu" id="SysRoleMenuMap">
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <select id="findMenusByRoleIds" resultType="com.mic.model.bean.SysMenu">
        select distinct t.* from sys_menu t
        inner join sys_role_menu r on r.menu_id = t.id
        where r.role_id in
        <foreach collection="roleIds" index="index" item="roleId"
                 open="(" separator="," close=")">
            #{roleId}
        </foreach>
        <if test="type != null">
            and t.type = #{type}
        </if>
        ORDER BY sort ASC
    </select>
</mapper>